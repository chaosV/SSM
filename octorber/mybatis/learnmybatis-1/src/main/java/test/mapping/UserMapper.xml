<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper    
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"    
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="test.mapping.UserMapper">

	<resultMap id="BaseResultMap" type="test.pojo.Player">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="score" property="score" jdbcType="INTEGER" />
		<result column="username" property="username" jdbcType="VARCHAR" />
		<result column="password" property="password" jdbcType="VARCHAR" />
	</resultMap>
	<select id="getALLUsers" resultMap="BaseResultMap">
		select * from `player`;
	</select>

	<select id="getPlayerById" parameterType="int" resultMap="BaseResultMap">
		select * from `player` where id=#{pid};
	</select>
	
	<select id="getPlayerAttrMapById" parameterType="int" resultType="hashmap">
		select * from `player` where id=#{pid};
	</select>
	
	<!-- <select id="insertPlayer" parameterType="test.pojo.PLayer" KeyProperty="playerId" playerGeneratedKey="true">
		insert into `player` (name,score,username,password) values (#{name},#{score},#{username},#{password})
	</select> -->
	
	<insert id="insertPlayer" parameterType="test.pojo.Player">
		insert into `player` (name,score,username,password) values (#{name},#{score},#{username},#{password})
	</insert> 
	
	<update id="updataPlayer" parameterType="test.pojo.Player">
		update `player` set name=#{name},score=#{score},username=#{username},password=#{password} where `id`=#{id}
	</update>
	
	<delete id="deletePlayer" parameterType="test.pojo.Player">
		delete from `player` where id=#{id}
	</delete>
</mapper>